!!! XML
!!!
%html
	%head
		%title= SITE_TITLE
		= javascript_include_tag :application
		= csrf_meta_tag
		= stylesheet_link_tag :application
		= auto_discovery_link_tag :atom, "/feed"
		= auto_discovery_link_tag :rss, "/feed.rss"
	%body.bp.two-col

		#container

			#header
				%h1#author S.D. O'Donnell
				%p#author_small AUTHOR
				= render 'partials/login'
			= render 'partials/nav'

			= yield

			#footer
				%p.left Copyright &#169; 2013 S.D. O'Donnell
				%p.right Site by Tyrel Richey
			= render 'partials/google'
